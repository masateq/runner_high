- content_for(:title, t('.edit_user'))
.px-4.pt-5.text-center.border-bottom.fw-bold 
  h1.display-4.fst-italic = t('.edit_user')
  .col-lg-6.mx-auto 
    = form_with model:@user, local: true do |f|
      .row.mb-3
        = f.label :name, class: 'col-sm-6'
        .col-sm-4.d-sm-flex
          = f.text_field :name, class: 'form-control'
      .row.mb-3
        = f.label :age, class: 'col-sm-6'
        .col-sm-2.d-sm-flex
          = f.text_field :age, class: 'form-control', placeholder: '0~100'
      .row.mb-3
        = f.label :sex, class: 'col-sm-6'
        .col-sm-6.d-sm-flex
          = f.collection_radio_buttons :sex, User.sexes_i18n, :first, :last, class: 'form-check-input'
      .row.mb-3
        = f.label :weight, class: 'col-sm-6'
        .col-sm-2.d-sm-flex
          = f.text_field :weight, class: 'form-control', placeholder: '0~200'
      .row.mb-3
        = f.label t('.running_time'), class: 'col-sm-6'
        .col-sm-6.d-flex
          = f.text_field :running_distance, class: 'form-control'
          |  km
          = f.text_field :running_hour, class: 'form-control', placeholder: 'hh'
          | 時間　
          = f.text_field :running_minute, class: 'form-control', placeholder: 'mm'
          | 分
          = f.text_field :running_second, class: 'form-control', placeholder: 'ss'
          | 秒
      .d-grid.gap-2.d-sm-flex.justify-content-sm-center.mb-5 
        = f.submit t('defaults.registration'), class: 'btn btn-outline-primary btn-lg px-4'

    table.table
      tr
        th scope='col' 目標vdot
        td = @user.vdot.round(2)    